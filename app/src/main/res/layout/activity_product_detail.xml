<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.ProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_takaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintTop_toBottomOf="@id/tv_takaran"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />

            <RatingBar
                android:id="@+id/rb_sendok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                android:stepSize="0.1"
                android:isIndicator="true"
                style="@style/CustomRatingBarStyle"
                android:numStars="5"/>

            <TextView
                android:id="@+id/tv_gula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbltvgula"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rb_sendok"/>

            <TextView
                android:id="@+id/tv_banyakgula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_gula"/>

            <TextView
                android:id="@+id/tv_kalori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbltvkalori"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_banyakgula"/>

            <TextView
                android:id="@+id/tv_banyakkalori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_kalori"/>

            <TextView
                android:id="@+id/tv_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbltvprotein"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_banyakkalori"/>

            <TextView
                android:id="@+id/tv_banyakprotein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_protein"/>

            <TextView
                android:id="@+id/tv_lemak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbltvlemak"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_banyakprotein"/>

            <TextView
                android:id="@+id/tv_banyaklemak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_lemak"/>

            <TextView
                android:id="@+id/tv_lemakjenuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbltvlemak"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_banyaklemak"/>

            <TextView
                android:id="@+id/tv_banyaklemakjenuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_lemakjenuh"/>

            <TextView
                android:id="@+id/tv_garam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbltvgaram"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_banyaklemakjenuh"/>


            <TextView
                android:id="@+id/tv_banyakgaram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_garam"/>

            <TextView
                android:id="@+id/tv_karbohidrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbltvkarbohidrat"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_banyakgaram"/>

            <TextView
                android:id="@+id/tv_banyakkarbohidrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_karbohidrat"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/arc"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/lbl_gula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblgula"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/lbl_tambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/lbl_gula"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@id/lbl_gula"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintBottom_toTopOf="@id/btn_konsumsi"
            app:layout_constraintTop_toBottomOf="@id/lbl_gula"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp">
            <ProgressBar
                android:id="@+id/pg_gulaharian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/CustomPgBar"/>
            <TextView
                android:id="@+id/pg_tvProgress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignStart="@id/pg_gulaharian"
                android:layout_alignTop="@id/pg_gulaharian"
                android:layout_alignEnd="@id/pg_gulaharian"
                android:layout_alignBottom="@id/pg_gulaharian"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_konsumsi"
            android:layout_width="225dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="@string/lblConsum"
            android:textSize="20sp"
            android:backgroundTint="?attr/colorSecondary"
            android:background="@drawable/roundcornerwhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ToggleButton
            android:id="@+id/toggle_favorite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fav_toggle"
            android:backgroundTint="@color/pink"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toEndOf="@id/btn_konsumsi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_konsumsi"
            app:layout_constraintBottom_toBottomOf="@id/btn_konsumsi"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>